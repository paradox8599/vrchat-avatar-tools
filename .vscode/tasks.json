{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:debug",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path=./src-tauri/Cargo.toml",
                "--no-default-features"
            ]
        },
        {
            "label": "build:release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--manifest-path=./src-tauri/Cargo.toml"
            ],
            "dependsOn": "ui:build"
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": "bun",
            "args": [
                "build:next"
            ]
        }
    ]
}
